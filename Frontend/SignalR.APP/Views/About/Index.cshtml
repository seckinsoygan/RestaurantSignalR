@model List<AboutViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkında Düzenleme</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Hakkında ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.ImageUrl</td>
                                        <td><a href="/About/UpdateAbout/@item.Id" class="btn btn-outline-warning">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @* <a href="/Category/CreateCategory" class="btn btn-outline-success">Ekle</a> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model SignalR.Dto.About.UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkında Güncelleme</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Base Form Control</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label for="categoryName">Başlık</label>
                                <input type="text" class="form-control" asp-for="Title" id="inputid1">
                            </div>
                            <div class="form-group">
                                <label for="categoryName">Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description" id="inputid2">
                            </div>
                            <div class="form-group">
                                <label for="categoryName">Fotoğraf</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="inputid3">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


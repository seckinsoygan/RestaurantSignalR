@model SignalR.Dto.Booking.CreateBookingDto
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yeni Rezervasyon Girişi</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Base Form Control</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryName">İsim</label>
                                <input type="text" class="form-control" asp-for="Name" id="inputid1">
                            </div>
                            <div class="form-group">
                                <label for="categoryName">Telefon</label>
                                <input type="text" class="form-control" asp-for="Phone" id="inputid1">
                            </div>
                            <div class="form-group">
                                <label for="categoryName">Mail</label>
                                <input type="email" class="form-control" asp-for="Mail" id="inputid1">
                            </div>
                            <div class="form-group">
                                <label for="categoryName">Tarih</label>
                                <input type="date" class="form-control" asp-for="Date" id="inputid1">
                            </div>
                            <div class="form-group">
                                <label for="categoryName">Kişi Sayısı</label>
                                <input type="number" class="form-control" asp-for="PersonCount" id="inputid1">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

